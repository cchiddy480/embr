{
  "name": "embr-platform",
  "version": "1.0.0",
  "description": "Embr - Micro app platform for events and businesses",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@embr/hub-app",
    "build": "npm run build --workspace=@embr/hub-app",
    "generate": "node scripts/generate-standalone.js",
    "build-client": "node scripts/build-client.js",
    "setup": "npm install && npm run setup:firebase",
    "setup:firebase": "node scripts/setup-firebase.js",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/embr-platform/embr-platform.git"
  },
  "keywords": [
    "micro-apps",
    "events",
    "business",
    "capacitor",
    "nextjs",
    "firebase"
  ],
  "author": "Embr Team",
  "license": "MIT",
  "dependencies": {
    "@capacitor/storage": "^1.2.5",
    "firebase-admin": "^13.4.0",
    "react-zxing": "^2.1.0"
  }
}
