{
  "name": "embr-platform",
  "version": "1.0.0",
  "description": "Embr - Micro app platform for events and businesses",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@embr/hub-app",
    "build": "npm run build --workspace=@embr/hub-app",
    "generate": "node scripts/generate-standalone.js",
    "build-client": "node scripts/build-client.js",
    "devlog:update": "node scripts/update-dev-log.js",
    "devlog:append": "node scripts/update-dev-log.js --append",
    "update:docs": "node scripts/update-documentation.js",
    "configs:push": "node scripts/configs-push.js",
    "configs:push:one": "node scripts/configs-push.js --only",
    "client:create": "node scripts/create-client.js",
    "client:validate": "node scripts/validate-client-config.js --all",
    "setup": "npm install && npm run setup:firebase",
    "setup:firebase": "node scripts/setup-firebase.js",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces",
    "tsprune:hub": "npx ts-prune -p packages/hub-app/tsconfig.json",
    "tsprune:ui": "npx ts-prune -p packages/ui/tsconfig.json",
    "depcheck:root": "npx depcheck",
    "depcheck:hub": "npx depcheck packages/hub-app",
    "depcheck:ui": "npx depcheck packages/ui",
    "audit:theme": "node scripts/theming-audit.js",
    "check:isolation": "node scripts/check-demo-isolation.js",
    "validate:files": "node scripts/validate-files.js",
    "session:init": "node scripts/session-init.js",
    "session:end": "node scripts/session-end.js",
    "git:start": "node scripts/git-workflow.js start",
    "git:session": "node scripts/git-workflow.js session",
    "git:commit": "node scripts/git-workflow.js commit",
    "git:save": "node scripts/git-workflow.js save",
    "git:finish": "node scripts/git-workflow.js finish",
    "git:end": "node scripts/git-workflow.js end",
    "git:status": "node scripts/git-workflow.js status",
    "git:cleanup": "node scripts/git-workflow.js cleanup",
    "migrate:configs": "node scripts/migrate-configs-to-firestore.js",
    "clients:loader": "node scripts/generate-client-loader.js",
    "clients:expiry": "node scripts/update-expiry.js"
  },
  "devDependencies": {
    "@chainlift/liftkit": "^0.1.1",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "depcheck": "^1.4.6",
    "ts-prune": "^0.10.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/embr-platform/embr-platform.git"
  },
  "keywords": [
    "micro-apps",
    "events",
    "business",
    "capacitor",
    "nextjs",
    "firebase"
  ],
  "author": "Embr Team",
  "license": "MIT",
  "dependencies": {
    "@capacitor/storage": "^1.2.5",
    "firebase-admin": "^13.4.0",
    "react-zxing": "^2.1.0"
  }
}
